<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.healthyme.mapper.UserMapper">

	<select id="getTime" resultType="String">
		select now()
	</select>

	<insert id="insertUser">
		insert into user (userid, userpw, username, email, phone)
		values (#{userid}, #{userpw}, #{username}, #{email}, #{phone})
	</insert>
	
	<select id="selectUser" resultType="com.healthyme.domain.UserVO">
		select *
		from user
		where userid = #{userid}
	</select>
	
	<select id="loginCheck" resultType="com.healthyme.domain.UserVO">
		select username, idx
		from user
		where userid = #{userid} AND userpw = #{userpw}
	</select>


	

</mapper>